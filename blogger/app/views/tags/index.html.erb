<h1>All Tags</h1>

<ul id="tags">
  <% @tags.each do |tag| %>
    	<% tag.articles.each do |t| %>
		    <li><%= link_to tag.name, article_path(t) %>
		    <%= link_to "delete", tag_path(tag.id), method: :delete , data: {confirm: "Really delete the tag?"}%>
		    </li>
  		<% end %>
  <% end %>
</ul>


